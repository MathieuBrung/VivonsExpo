<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<style name="Nom du style Ã  utiliser dans le layout avec : style="@style/NomDuStyle"">
        <item name="nomDeLattribut">Valeur</item>
    </style> !-->
    <style name="imgBtn">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="btn">
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_corners</item>
    </style>

    <style name="editTextFormulaire">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="textViewFormulaire">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>